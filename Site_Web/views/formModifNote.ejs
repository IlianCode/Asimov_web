<%- include('header') %>
    <link rel="icon" href="/img/logo.png">
    <script src="/controllers/ctrlGlobal.js"></script>
    <title>Asimov : Page de connexion</title>
</head>
<body id="body-connexion">
    <div>
        <% if (ref === true) { %> 
            <%- include('enTeteReferent') %>
        <% }else{ %> 
            <%- include('enTeteProf') %>
        <% } %> 
    </div>
    <div class="centrePage">
        <div class="formulaire">
            <div class="image" style="background-image: url(/img/logo.png); width: 100px; height: 100px;"></div>
            <form action="/Asimov/Modif_Notes" method="POST">
                <input name="idClasse" value="<%=idClasse%> " type="hidden">
                <input name="idEleve" value="<%=idEleve%> " type="hidden">
                <input name="idNote" value="<%=idNote%> " type="hidden">
                <input name="note" type="text" placeholder="Note">
                <input type="submit">
            </form>
        </div>
    </div>

<%- include('footer') %>