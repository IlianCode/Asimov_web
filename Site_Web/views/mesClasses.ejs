<%- include('header') %>

        <title>Asimov : Mes Classes</title>
    </head>
    <body id="body-mesClasses">
        <div class="centrePage">
        <div class="formulaire">
            <% if (ref === true) { %> 
                <%- include('enTeteReferent') %>
            <% }else{ %> 
                <%- include('enTeteProf') %>
            <% } %> 
        <div>
            <% if(locals.err) { %> 
                <h1><%=err%></h1>
            <% }else{ %> 
                <h1>Liste de vos classes</h1>
                <div style="margin-bottom: 25px; margin-left: 20px; margin-right: 20px;">
                    <table border=1 cellspacing=0 cellpadding=5 style="width: 500px; border-collapse: unset; margin-bottom: 20px;">
                        <tr>
                            <th>Nom</th>
                            <th>Détails</th>
                        </tr>
                <% classes.forEach((classe) => {%> 
                            <tr>
                                <td><%=classe.nom%></td>
                                <td><a class="btn btn-primary" href="/Asimov/Eleves_Classe/<%=idProf%>/<%=classe.idClasse%>">Détails</a></td>
                            </tr>
                <% }) %>  
                </table>
            </div>  
        </div>

<%- include('footer') %>

<% } %> 