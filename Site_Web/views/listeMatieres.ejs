<%- include('header') %>
    
    <title>Asimov : Matières</title>
</head>
<body>
    <div>
        <%- include('enTeteProviseur') %>
    </div>
    
    <div>
        
        <% if(locals.err) { %> 
            <h1><%=err%></h1>
        <% }else{ %>
            <table>
                <tr>
                    <th>Nom de la matière</th>
                </tr>

                <% matieres.forEach((matiere) => {%> 
                    <tr>
                        <td><%=matiere.nom%></td> <td><a class="btn btn-primary" href="/Asimov/formulaire_modif_Matiere/<%=matiere.idMatiere%>">Modif</a></td> <td><a class="btn btn-primary" href="/Asimov/Suppr_Matiere/<%=matiere.idMatiere%>">Suppr</a></td>
                    </tr>
                <% }) %>  
            </table>  
            <form action="/Asimov/Ajout_Nouvelle_Matiere" method="post">
                <input name="nom" type="text" placeholder="Nom Matière">
                <input class="btn btn-primary" type="submit" value="Envoyer">
            </form> 
    </div>

<%- include('footer') %>
        <% } %> 