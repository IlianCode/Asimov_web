<%- include('header') %>

    <title>Asimov : Mes notes</title>
</head>
<body id="body-mesNotes">
    <% if (proviseur === true) {%> 
        <%- include('enTeteProviseur') %>
    <% }else{ %> 
        <a class="btn btn-primary" style="align-self: flex-end;" href="/Asimov/Deco">Se déconnecter</a>
    <% } %> 
    <% if (locals.err) { %>
        <h1><%=err.msgErreur%></h1>
    <% }else{ %> 
        <div style="margin-bottom: 20px;">
            <h2>Notes de l'élève : <%=data[0].nom%> <%=data[0].prenom%></h2>
            <h3>Moyenne Générale: <%=moyGeneral%></h3>
        </div>
        <div>
            <table style="width: 800px; border-collapse: unset;">
                <tr>
                    <th style="padding-right: 50px;">Titre</th>
                    <th style="padding-right: 50px;">Date</th>
                    <th style="padding-right: 50px;">Note</th>
                </tr>
                <% for (let i = 0;i<compteur;i++) { %> 
                    <% data.forEach((note) =>{%>
                        <% if (note.idMatiere == tableMatiere[i]) {%>
                            <% if (note.Moyenne != null){%>
                                <tr>
                                    <th style="padding-right: 50px;">Matière : <%=note.Matiere%></th>
                                    <th style="padding-right: 50px;text-align: center;">/</th>
                                    <th style="padding-right: 50px;">Moyenne : <%=note.Moyenne%></th>
                                </tr>
                            <%} else {%>
                                <tr>
                                    <td style="padding-right: 50px;"><%=note.titre%></td>
                                    <td style="padding-right: 50px;"><%=moment(new Date(note.date)).calendar()%></td>
                                    <td style="padding-right: 50px;"><%=note.note%></td>
                                    <% if (proviseur === true) { %> 
                                        <td style="padding-right: 50px;"><a href="/Asimov/formulaire_Modif_Note/<%=data[0].Id_Classe%>/<%=idEleve%>/<%=note.idNote%>">Modif</a></td>
                                        <td style="padding-right: 50px;"><a href="/Asimov/Suppr_Notes/<%=data[0].Id_Classe%>/<%=idEleve%>/<%=note.idNote%>"><img src="/img/suppr.png"></a></td>
                                    <% } %> 
                                </tr>
                            <% } %>
                        <% } %>    
                    <% }) %> 
                <% } %> 
            </table>
        </div>
    <% } %> 

<%- include('footer') %>